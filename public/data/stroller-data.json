  "test_requirements": [
    {
      "test_name": "Stability Test",
      "test_name_cn": "稳定性测试",
      "description": "前向、后向、侧向倾倒测试",
      "pass_criteria": "不倾倒或倾倒角度<15°",
      "angle": "15°"
    },
    {
      "test_name": "Parking Brake Test",
      "test_name_cn": "驻车制动测试",
      "description": "在斜坡上测试制动性能",
      "pass_criteria": "不滑动，制动距离<100mm",
      "slope": "12°"
    },
    {
      "test_name": "Harness Strength Test",
      "test_name_cn": "安全带强度测试",
      "description": "安全带拉力测试",
      "pass_criteria": "无断裂，永久变形<25mm",
      "force": "300N"
    },
    {
      "test_name": "Structural Integrity",
      "test_name_cn": "结构完整性测试",
      "description": "框架强度和耐用性测试",
      "pass_criteria": "无变形、断裂或功能失效",
      "cycles": "10,000 cycles"
    },
    {
      "test_name": "Entrapment Hazard",
      "test_name_cn": "夹伤风险测试",
      "description": "测试活动部件的夹伤风险",
      "pass_criteria": "所有测试探针通过",
      "probes": ["5mm", "7mm", "12mm"]
    },
    {
      "test_name": "Finger Entrapment",
      "test_name_cn": "手指夹伤测试",
      "description": "测试可折叠机构的夹伤风险",
      "pass_criteria": "无>7mm的开口，力>50N"
      },
    {
      "test_name": "Impact Test",
      "test_name_cn": "冲击测试",
      "description": "带假人进行冲击测试",
      "pass_criteria": "假人位移<300mm，加速度<50g",
      "impact": "1m drop"
    },
    {
      "test_name": "Load Test",
      "test_name_cn": "负载测试",
      "description": "施加3倍最大承载重量",
      "pass_criteria": "无永久变形>25mm",
      "load": "3x max weight"
    }
  ],
